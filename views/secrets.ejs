<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered Someone's Secrets!</h1>
        
        <% for (let secret in secrets) { %>
          <% if (secrets.hasOwnProperty(secret)) { %>
                    <p class="secret-text"><%= secrets[secret].secret %></p>
         <% } %> 
       <% } %>
    <hr>
    <a class="btn btn-light btn-lg" href="/" role="button">Back</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
